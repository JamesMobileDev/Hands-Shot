<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HandSelectionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bk" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="60dp"
            android:background="@drawable/settings_rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand1"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:background="@drawable/hand_red_1"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand2"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_2"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand3"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_3"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand4"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_4"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand5"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_5"
                                    android:button="@null" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand6"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:background="@drawable/hand_red_6"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand7"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_7"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand8"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_8"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand9"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_9"
                                    android:button="@null" />

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbHand10"
                                    android:layout_width="84dp"
                                    android:layout_height="72dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/hand_red_10"
                                    android:button="@null" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                    </FrameLayout>


                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginVertical="18dp"
                    android:backgroundTint="@color/btn_selector"
                    android:paddingHorizontal="50dp"
                    android:text="@string/menu"
                    android:textSize="15sp"
                    app:cornerRadius="16dp"
                    app:rippleColor="@null"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp" />

            </LinearLayout>


        </FrameLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>